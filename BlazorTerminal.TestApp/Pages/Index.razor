@page "/"

<h3>Test Terminal</h3>

<TerminalControl @ref="terminal" />

@code {
    private TerminalControl? terminal;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender && terminal is not null)
        {
            terminal.WriteLine("Hello from TestApp!");
            terminal.Write("> ");
        }
    }
}
